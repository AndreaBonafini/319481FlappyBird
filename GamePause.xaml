<Window x:Class="FlappyBird.GamePause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="GamePause" Height="500" Width="400" Background="Transparent" ResizeMode="NoResize">
    <Grid>
        <StackPanel Height="100" Width=" 60" >
            <Button x:Name="btnResume" Click="BtnResume_Click">Resume</Button>
            <Button x:Name="btnRestart" Click="BtnRestart_Click">Restart</Button>
            <Button x:Name="btnExit" Click="BtnExit_Click">Exit</Button>
        </StackPanel>
    </Grid>
</Window>
